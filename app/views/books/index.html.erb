<p id="notice">
		<%= notice %>
	</p>
	<h1>Books</h1>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<% @books.each do |book| %>
		 <tbody>
			<tr>
				<td><span><%= book.title %></span></td>
				<td><span><%= book.body %></span></td>
				<td><span><%= link_to "Show", book_path(book.id) %></span></td>
				<td><span><%= link_to "Edit", edit_book_path(book.id) %></span></td>
				<td><span><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?"%></span></td>
			</tr>
		 </tbody>
		<% end %>
	</table>
	<div class="form_block">
	<h2>New books</h2>
	<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

	</div>